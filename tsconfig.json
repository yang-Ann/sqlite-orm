{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist/types",
    "declarationMap": false,
    "skipLibCheck": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "lib": ["DOM", "ESNext"]
  },
  "include": ["**/*.ts", "**/*.d.ts"],
  "files": ["src/types.ts", "package.json"],
  "exclude": ["dist/**/*", "rollup.config.ts", "vitest.config.ts"]
}
